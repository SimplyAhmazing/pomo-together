    <script>
      var React = require('react');
    </script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io();
      socket.on('time-tick', function(data){
        var timerElement = document.getElementById('timer');
        var seconds = Math.round( (data % 1) * 60);
        var minutes = Math.floor(data);
        timerElement.innerHTML = (minutes <= 9 ? "0" + minutes : minutes)  + ':' + (seconds <= 9 ? "0" + seconds : seconds);
      });
    </script>
    <link href='http://fonts.googleapis.com/css?family=Give+You+Glory' rel='stylesheet' type='text/css'>
    <style>
      #container {
        margin: 0 auto;
        text-align: center;
      }
      .timer-text {
        font-size: 48px;
        /* font-weight: bold; */
      }
      #wrong-text {
        text-decoration: line-through;
      }
      #right-text {
        font-family: 'Give You Glory', cursive;
        color: red;
        position: relative;
        top: -30px;
        font-size: 50px;
        font-weight: bold;
        -ms-transform: rotate(-10deg); /* IE 9 */
        -webkit-transform: rotate(-10deg); /* Safari */
        transform: rotate(-10deg);
      }
    </style>
  </head>
  <body>
    <div id="container">
    <h1 id="timer" class="timer-text"></h1>
    <div class="timer-text">Those who pomo together <br><br>
      <span id="wrong-text">stay together</span><br><br>
      <div id="right-text">Are more productive</div>
    </div>
  </div>
